        background-color: black;
    }

    .container-switcher{
        background-color: black;
        display: none;
    }

    .active{
        display: block;
    }

</style>

<script>
    const btn = document.getElementById('next');
    const app = document.querySelectorAll('.container-switcher');
    
    let init = 0
    btn.addEventListener('click', () => {
        console.log(app)
        if(init <= 3){
            console.log(init)
            if(app[init].classList.contains('active')){
                app[init].classList.remove('active')
            } else {
                app[init - 1].classList.remove('active')
                app[init].classList.add('active')
            }
            init++
        } else {
            console.log('menor', init)
            app[init -1 ].classList.remove('active')
            init = 0
            app[init].classList.add('active')
        }
        
        
    })
</script>
