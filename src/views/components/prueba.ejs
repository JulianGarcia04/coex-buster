<%- include('../partials/head.ejs') %>
<div class="container-info">
  <div id="synopsis" class="container-switcher active">
    <h1>Synopsis</h1>
    <%- include('./synopsis.ejs') %>
  </div>

  <div id="trailer" class="container-switcher">
    <h1>Trailer</h1>
    <%- include('./movieTrailer.ejs') %>
  </div>

  <div id="recommended" class="container-switcher">
    <h1>Recommended</h1>
    <%- include('./carousel.ejs') %>
  </div>

  <div id="casting" class="container-switcher">
    <h1>Casting</h1>
    <%- include('./carousel-actor.ejs') %>
  </div>

  <button id="next">Next Section</button>
</div>

<%- include('../partials/foot.ejs') %>

<style>
  .container-info {
    width: 100%;
    height: 100%;
    background-color: #02021c;
  }

  .container-switcher {
    display: none;
    text-align: center;
    color: #fff;
    width: 100%;
    height: 100%;
    /* overflow: hidden;
    -webkit-transition: all 700ms ease-out;
    -moz-transition: all 700ms ease-out;
    transition: all 700ms ease-out; */
  }

  .active {
    display: block;
  }

  button .next {
    border-radius: 10px;
    outline: none;
    justify-content: center;
  }

</style>

<script>
  const btn = document.getElementById("next");
  const app = document.querySelectorAll(".container-switcher");

  let init = 0;
  btn.addEventListener("click", () => {
    console.log(app);
    if (init <= 3) {
      console.log(init);
      if (app[init].classList.contains("active")) {
        init++;
      } else {
        app[init - 1].classList.remove("active");
        app[init].classList.add("active");
      }
    } else {
      console.log("menor", init);
      app[init - 1].classList.remove("active");
      init = 0;
      app[init].classList.add("active");
    }
  });
</script>
